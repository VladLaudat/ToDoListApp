@model TodoListApp.WebApp.WebAPIServices.Models.Task

<form asp-controller="Task" asp-action="AddToDb">
    <input type="hidden" asp-for="CreatedDate" value="@DateTime.Now" />
    <input type="hidden" asp-for="DueDate" />
    <input type="hidden" asp-for="StatusId" value="1" />
    <input type="hidden" asp-for="TodoListId" />
    <input type="hidden" asp-for="Status" />
    <input type="hidden" asp-for="TodoList" />
    <input type="hidden" asp-for="Tags" />
    <div class="form-group">
        <label asp-for="Title">Title<input asp-for="Title" class="form-control" /></label>
        
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Description<input asp-for="Description" class="form-control" /></label>
        
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DueDate">DueDate<input asp-for="DueDate" class="form-control" type="date" /></label>
        
        <span asp-validation-for="DueDate" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Create</button>
</form>
