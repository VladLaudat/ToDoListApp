@model IList<TodoListApp.WebApp.ViewModels.TodoListListViewModel>

<h4>To do lists</h4>
<div class="accordion" id="TodoLists">
    @{
        int i = 0;
        foreach(var item in Model)
        {
            i++;
            <div class="accordion-item">
                <h2 class="accordion-header" id="heading-@i">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-@i" aria-expanded="true" aria-controls="collapse-@i">
                        @item.Title
                    </button>
                </h2>
                <div id="collapse-@i" class="accordion-collapse collapse" aria-labelledby="heading-@i" data-bs-parent="#TodoLists">
                    <div class="accordion-body">
                        <p class="small text-muted">@item.Description</p>
                        <a class="btn btn-warning btn-sm" asp-controller="TodoList" asp-action="Edit" asp-route-id ="@i">
                            <i class="bi bi-pencil"></i>
                        Edit
                        </a>
                        <a class="btn btn-danger btn-sm" asp-controller="TodoList" asp-action="DeleteFromDb" asp-route-id="@i">
                            <i class="bi bi-trash"></i>
                        Delete
                        </a>
                    </div>
                </div>
                
            </div>
        }
    }
    <div class="d-flex justify-content-between mt-2">
        <ul class="pagination mb-0">
            <li class="page-item"><a class="page-link" href="#">Previous</a></li>
            <li class="page-item"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item"><a class="page-link" href="#">Next</a></li>
        </ul>
        <button type="button" class="btn btn-primary mb-2">Add</button>
    </div>
        
    
</div>
