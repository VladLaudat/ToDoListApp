@model TodoListApp.WebApp.WebAPIServices.Models.TodoList

<form asp-controller="TodoList" asp-action="UpdateToDb">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Title">Title<input asp-for="Title" class="form-control" /></label>
        
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Description<input asp-for="Description" class="form-control" /></label>
        
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Submit changes</button>
</form>
